@page "/workorders"
@using BlazorPdfApp.Hosting

@code {
    private Type? entryType;

    protected override void OnInitialized()
    {
        entryType = PluginLoader.ResolveEntryType("workorder"); // เรียกแบบ static
    }
}

@if (entryType is null)
{
    <div class="alert alert-danger m-3">
        ไม่พบ Entry ของปลั๊กอิน WorkOrder (เช็ค assembly/entryType ใน plugin.json)
    </div>
}
else
{
    <DynamicComponent Type="entryType" />
}

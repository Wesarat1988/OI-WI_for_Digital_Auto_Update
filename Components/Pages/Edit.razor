        private static bool IsMicrosoft365Host(string host)
        {
            if (string.IsNullOrWhiteSpace(host))
            {
                return false;
            }

            var normalized = host.ToLowerInvariant();

            return normalized == "onedrive.live.com"
                   || normalized == "1drv.ms"
                   || normalized.EndsWith(".sharepoint.com", StringComparison.Ordinal)
                   || normalized.EndsWith(".sharepoint-df.com", StringComparison.Ordinal)
                   || normalized.EndsWith(".sharepoint.us", StringComparison.Ordinal)
                   || normalized.EndsWith(".sharepoint-mil.us", StringComparison.Ordinal)
                   || normalized.EndsWith(".sharepoint.de", StringComparison.Ordinal)
                   || normalized.EndsWith(".sharepoint.cn", StringComparison.Ordinal)
                   || normalized.EndsWith(".office.com", StringComparison.Ordinal)
                   || normalized.EndsWith(".officeapps.live.com", StringComparison.Ordinal);
        }

        private static string BuildEditUrl(Uri shareUri)
        {
            var baseUrl = shareUri.GetLeftPart(UriPartial.Path);
            var query = QueryHelpers.ParseQuery(shareUri.Query);
            var normalized = new Dictionary<string, string?>(StringComparer.OrdinalIgnoreCase);

            foreach (var kvp in query)
            {
                if (string.Equals(kvp.Key, "action", StringComparison.OrdinalIgnoreCase))
                {
                    continue;
                }

                normalized[kvp.Key] = kvp.Value.LastOrDefault();
            }

            normalized["action"] = "edit";

            var editUrl = QueryHelpers.AddQueryString(baseUrl, normalized);

            if (!string.IsNullOrEmpty(shareUri.Fragment))
            {
                editUrl += shareUri.Fragment;
            }

            return editUrl;
        }

        private static string BuildEmbedUrl(string editUrl)
        {
            var encoded = Uri.EscapeDataString(editUrl);
            return $"https://view.officeapps.live.com/op/embed.aspx?src={encoded}&wdAllowInteractivity=True&wdHideHeaders=True&wdDownloadButton=True";
        }
